<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/purple"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:id="@+id/ReviewText"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Review"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="36sp"
                android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TripText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="From"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/FromValueText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="To Campus"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ToText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="To"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ToValueText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="To Campus"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TimeText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="Time"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/TimeValueText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="7:30 AM"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/DateText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="Date"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/DateValueText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="13 Dec 2023"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/AddressText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="Price"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="22sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/PriceValueText"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:text="50 EGP"
                    android:textAlignment="center"
                    android:textColor="@color/purple"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/purple"
                android:text="Book Trip"
                android:textSize="18sp"
                app:cornerRadius="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>






</LinearLayout>